@model AdmininaterViewModel.PrivilegedUserViewModel

<div id="edit-user-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "edit-username" })
                        <label class="form-label" for="form2Example1">Username</label>
                    </div>
                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "edit-password" })
                        <label class="form-label" for="form2Example2">New Password</label>
                    </div>
                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @id="edit-email" })
                        <label class="form-label" for="form2Example2">Email</label>
                    </div>
                    <div>Id: @Model.Id</div>
                    <div>Admininater Status: @Model.IsAdmininater</div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="admininater.saveUserChanges(@Model.Id)">Save Changes</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    </div>
            </div>
        </div>
    </div>
</div>
