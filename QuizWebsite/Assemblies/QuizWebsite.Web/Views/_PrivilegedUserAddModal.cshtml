@model AdmininaterViewModel.PrivilegedUserViewModel

<div id="add-user-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="form-outline mb-4">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "new-username" })
                    <label class="form-label" for="form2Example1">Username</label>
                </div>
                <div class="form-outline mb-4">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "new-password" })
                    <label class="form-label" for="form2Example2">Password</label>
                </div>
                <div class="form-outline mb-4">
                    @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @id = "new-email" })
                    <label class="form-label" for="form2Example2">Email</label>
                </div>
                <div class="mb-4 form-check">
                    @Html.CheckBoxFor(m => m.IsAdmininater, new { @class="form-check-box", @id = "new-admininater"})
                    <label class="form-check-label" for="new-admininater">Admininater?</label>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="createNewUser()">Create User</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>